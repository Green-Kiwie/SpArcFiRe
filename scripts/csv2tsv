#!/bin/sh
DIR="`dirname $0`"
PATH="$PATH:$SPARCFIRE_HOME/scripts:$DIR"
export path
for i
do
    b=`basename "$i" .csv`
    cat "$i" | delete-commas-inside-quotes | sed \
	-e 's/ ,/,/g' -e 's/, /,/g' \
	-e 's;^\([0-9][0-9]\)/\([0-9][0-9]\)/\([0-9]*\);\3-\1-\2;' \
	-e 's;^\([0-9][0-9]\)/\([0-9]\)/\([0-9]*\);\3-\1-0\2;' \
	-e 's;^\([0-9]\)/\([0-9][0-9]\)/\([0-9]*\);\3-0\1-\2;' \
	-e 's;^\([0-9]\)/\([0-9]\)/\([0-9]*\);\3-0\1-0\2;' \
	-e 's/[ :/]/_/g' \
	-e 's/""/_/g' \
	-e 's/["$]//g' \
	-e 's/,,/,_,/g' \
	-e 's/,,/,_,/g' \
	-e 's/%/pc/g' \
	-e 's,/,to,g' \
	-e 's/\([^0-9,]\)-/\1/g' \
	-e 's/[()]//g' \
	-e 's/\([0-9]\);\([0-9]\)/\1\2/g'\
	-e 's/abs/_abs/g'\
	-e 's/,\([0-9][0-9]*\)_,/,\1,/g'\
	-e 's/,$/,_/g'\
	-e 's/#/num/g'\
	-e 's/>=/GE/g'\
	| tr ',' '	' \
    > "$b.tsv"
done

	#-e 's/-\([^0-9]\)/\1/g' \
	#-e 's/\([^0-9]\)\./\1/g' \
	#-e 's/\.\([^0-9]\)/\1/g' \
